<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipy" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightgray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:background">@color/lightgray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:fontFamily">@font/josephine_sans</item>

        <item name="actionBarTheme">@style/Theme.Recipy.ActionBar</item>
        <item name="android:actionBarStyle">@style/Theme.Recipy.ActionBarStyle</item>
    </style>

    <style name="Theme.Recipy.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface" >
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.Recipy.ActionBarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:gravity">center</item>
    </style>
</resources>